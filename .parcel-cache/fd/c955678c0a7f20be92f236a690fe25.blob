:root {
  --color-primary: ;
  --color-primary--light: ;
  --color-secondary: ;
  --color-secondary--light: ;
  --color-white: white;
  --color-black: black;
  --color-grey: grey;
  --color-grey--dark: #535252;
  --shadow-white: 0 0.34rem 1rem 0.5rem rgba(255, 255, 255, 0.8);
  --shadow-dark: 0 0.34rem 1rem 0.5rem rgba(0, 0, 0, 0.4); }

*,
*::before,
*::after {
  padding: 0;
  margin: 0;
  box-sizing: inherit; }

html {
  font-size: 62.5%; }

body {
  box-sizing: border-box;
  line-height: 1.5;
  font-family: "sans-serif", sans-serif;
  font-weight: 400; }

h1 {
  color: red;
  font-size: 5rem;
  background-color: black; }

.body-container {
  height: 100vh;
  width: 100vw;
  padding: 0;
  background-color: cadetblue; }

.slide {
  height: 100vh;
  width: 100vw; }

.slide {
  font-size: 3rem; }
  .slide--1 {
    background-color: orange; }
  .slide--2 {
    background-color: skyblue; }
  .slide--3 {
    background-color: blueviolet; }
