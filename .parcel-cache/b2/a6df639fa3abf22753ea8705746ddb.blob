*,
*::before,
*::after {
  padding: 0;
  margin: 0;
  box-sizing: inherit; }

html {
  font-size: 62.5%; }

body {
  box-sizing: border-box;
  font-family: "sans-serif", sans-serif;
  font-weight: 400; }

body {
  height: 100vh;
  width: 100vw;
  background-color: #2c2c2c;
  display: flex;
  align-content: center;
  justify-items: center; }

.main-container {
  background-color: #2c2c2c; }
