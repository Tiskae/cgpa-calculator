:root {
  --color-primary: ;
  --color-primary--light: ;
  --color-secondary: ;
  --color-secondary--light: ;
  --color-white: white;
  --color-black: black;
  --color-grey: grey;
  --color-grey--dark: #535252;
  --shadow-white: 0 0.34rem 1rem 0.5rem rgba(255, 255, 255, 0.8);
  --shadow-dark: 0 0.34rem 1rem 0.5rem rgba(0, 0, 0, 0.4); }

*,
*::before,
*::after {
  padding: 0;
  margin: 0;
  box-sizing: inherit; }

html {
  font-size: 62.5%; }

body {
  box-sizing: border-box;
  line-height: 1.5;
  font-family: "sans-serif", sans-serif;
  font-weight: 400; }

h1 {
  color: red;
  font-size: 5rem;
  background-color: black; }

.body-container {
  height: 100vh;
  width: 100vw;
  background-color: #5f9ea0;
  position: relative; }
  .body-container::-webkit-scrollbar {
    display: none; }

.slide {
  height: 100vh;
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0; }

.slide {
  font-size: 3rem;
  opacity: 0; }
  .slide--1 {
    background-color: orange;
    background-color: #41d3bd;
    background-image: url("29d9bfd8fe4527af8cdc2ce20c17c4af");
    background-attachment: fixed;
    background-size: cover; }
  .slide--2 {
    background-color: skyblue; }
  .slide--3 {
    background-color: blueviolet; }
  .slide--active {
    opacity: 1; }
